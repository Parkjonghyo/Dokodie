<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bookimage"
        android:layout_width="270dp"
        android:layout_height="300dp"
        android:src="@drawable/gatsby" />

    <TextView
        android:id="@+id/booktitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/sc_dream6"
        android:gravity="center_horizontal"
        android:text="위대한 개츠비"
        android:textColor="#4F4B39"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/bookwriter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/sc_dream4"
        android:gravity="center_horizontal"
        android:text="F. 스콧 피츠제럴드"
        android:textColor="#8A8362"
        android:textSize="15dp" />
</LinearLayout>